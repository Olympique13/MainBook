{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Nos produits
{% endblock %}

{% block body %}

	<div class="font-sans p-4 mx-auto lg:max-w-6xl md:max-w-4xl">
		<h2 class="text-2xl sm:text-3xl font-extrabold text-gray-800 mb-6 sm:mb-10">Nos livres numériques</h2>

		<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 sm:gap-6">
			{% for products in produit %}
				<div class="bg-white flex flex-col rounded overflow-hidden shadow-md cursor-pointer hover:scale-105 transition-all">
					<div class="w-full">
						<img src="images/products/{{products.imageName}}" alt="{{products.name}}" class="w-full"/>
					</div>

					<div class="p-4 flex-1 flex flex-col">
						<div class="flex-1">
							<h5 class="text-sm sm:text-base font-bold text-gray-800 line-clamp-2">{{products.name}}</h5>
							<span>{{products.catchPhrase}}</span>
							<div class="mt-2 flex items-center flex-wrap gap-2">
								<h6 class="text-sm sm:text-base font-bold text-gray-800">{{products.price}}€</h6>
							</div>
						</div>
						<button type="button" class="px-2 h-9 font-semibold w-full mt-4 bg-blue-600 hover:bg-blue-700 text-white tracking-wide ml-auto outline-none border-none rounded">Ajouter au panier</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
