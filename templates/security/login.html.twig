{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post" class="max-w-md mx-auto mt-8 p-6 bg-white shadow-md rounded">
		{% if error %}
			<div class="alert alert-danger text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal text-center text-2xl font-semibold">Connexion Ã  BOOKMAIN</h1>
		<label for="username" class="block text-gray-700">Email</label>
		<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="email" required autofocus>
		<label for="password" class="block text-gray-700 mt-4">Mot de passe</label>
		<input type="password" name="_password" id="password" class="form-control block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" autocomplete="current-password" required>

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		<button class="btn btn-lg btn-primary w-full mt-6 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" type="submit">
			Se connecter
		</button>
	</form>
{% endblock %}
