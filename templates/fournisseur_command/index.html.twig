{% extends 'base.html.twig' %}

{% block title %}Commande Fournisseur{% endblock %}

{% block body %}

    <h1 class="text-2xl font-bold mb-4">Passer une commande</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div class="mb-4">
            {{ form_row(form.frs_name, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}, 'type': 'choice'}) }}
        </div>
        <div class="mb-4">
            {{ form_row(form.frs_product, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(form.frs_stock, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
        </div>
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Commander</button>
    {{ form_end(form) }}

{% endblock %}
