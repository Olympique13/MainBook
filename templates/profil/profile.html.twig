{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
	<div class="container mx-auto p-6 flex flex-col items-center">

		{% for message in app.flashes('notice') %}
			<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
				<span class="block sm:inline">{{ message }}</span>
			</div>
		{% endfor %}

		{# <img class="inline-flex object-cover border-4 border-indigo-600 rounded-full shadow-[5px_5px_0_0_rgba(0,0,0,1)] shadow-indigo-600/100 bg-indigo-50 text-indigo-600 h-24 w-24 !h-48 !w-48" src="https://rayanweb.fr/images/photoface/moi.webp" alt="photo de moi"> #}
		<h1 class="text-2xl text-gray-500 font-bold mt-2">
			{{ app.user.lastName }} {{ app.user.firstName }}
		</h1>
		<h2 class="text-base md:text-xl text-gray-500 font-bold">
			{% if 'ROLE_ADMIN' in app.user.getRoles() %}
			Le meilleur admin !
			{% else %}
			coucou
			{% endif %}
		</h2>
	</div>
{% endblock %}
