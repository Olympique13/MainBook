{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}

	<div class="bg-white">
		<div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
			<h2 class="text-2xl font-bold tracking-tight text-gray-900">Customers also purchased</h2>


			{# boucle for produit in produits #}
			<div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
				{% for product in produits %}
					<div class="group relative">
						<div class="relative">
							<img src="images/products/{{product.imageName}}" alt="Image du produit : {{product.name}}" class="aspect-square w-full rounded-md bg-gray-200 object-cover lg:aspect-auto lg:h-80">
							<div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity">
								<span class="text-white text-center">{{ product.catchPhrase }}</span>
							</div>
						</div>
						<div class="mt-4 flex justify-between">
							<div>
								<h3 class="text-sm font-semibold text-gray-700">
									<a href="{{path('product_detail', {'slug': product.slug})}}" class="group-hover:text-gray-900">
										{{product.name}}
									</a>
								</h3>
								<p class="mt-1 text-sm text-gray-500">{{ product.price }}</p>
							</div>
							<p class="text-sm font-medium text-gray-900">{{ product.price }}â‚¬</p>
						</div>
					</div>
				{% endfor %}
				{# fin de boucle for #}

			</div>
		</div>
	</div>


{% endblock %}
